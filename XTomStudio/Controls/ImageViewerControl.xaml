                Source="Z:\ProCon\Temp\Max\EPLAN\Data\Bilder\Procon X-Ray GmbH\Siemens\Industrial_Controls\3SU1BLM\product_picture_G_IC03_XX_07637I.jpg" 
                Margin="16" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Stretch"
                />
            <Image 
                Width="512" 
